<!DOCTYPE html>
<html>
  <head>
    <title>Vidxter</title>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.19.0/video-js.css" rel="stylesheet">
  </head>

  <body class="<%= params[:controller].gsub('/', '-') %>">

    <div class="flex-content-container">
        <nav class="navbar navbar-toggleable-md navbar-inverse bg-inverse">
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                    <%= link_to 'Vidxter', root_path, class: 'navbar-brand' %>

            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <%= link_to 'See All Courses', courses_path, class: 'nav-link' %>
                </li>
            </ul>
            <ul class="navbar-nav">
                <% if user_signed_in? %>
                    <li class="nav-item">
                        <%= link_to 'My Dashboard', dashboard_path %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-link' %>
                    </li>
                <% else %>
                    <li class="nav-item">
                        <%= link_to 'Sign in', new_user_session_path, class: 'nav-link' %>
                    </li>
                    <li class="nav-item">
                        <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
                    </li>
                <% end %>
            </ul>
          </div>
        </nav>

        <% if notice.present? %>
            <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert.present? %>
            <p class="alert alert-danger"><%= alert %></p>
        <% end %>

        <%= yield %>
    </div>

    <script src="http://vjs.zencdn.net/5.19.0/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>
  </body>
</html>
