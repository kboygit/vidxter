<div class="sign-in">
    <div class="container">
        <div class="booyah-box col-12 col-md-6 offset-md-3">
            <h2 class="text-center">Sign in</h2>
            <br />

            <% if notice.present? %>
                <p class="alert alert-success"><%= notice %></p>
            <% end %>
            <% if alert.present? %>
                <p class="alert alert-danger devise"><%= alert %></p>
            <% end %>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="form-inputs">
                <%= f.input :email, required: false, autofocus: true %>
                <%= f.input :password, required: false %>
              </div>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class: 'btn-block btn-primary' %>
              </div>
            <% end %>

        </div>
        <div class="text-center">
            <%= render "devise/shared/links", class: "rendered-devise" %>
        </div>
    </div>
</div>

<div class="sign-in-lower">

</div>
